<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/textInputOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/inputOldText"
        android:textIsSelectable="true"
        android:textSize="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputOld"
        android:layout_below="@+id/textInputOld"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:hint="@string/inputText" />

    <Button
        android:id="@+id/denominationOldButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textInputOld"
        android:layout_toEndOf="@+id/inputOld"
        android:layout_toRightOf="@+id/inputOld"
        android:background="@color/whiteColorPrimary"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/conButtonText"
        android:textColor="@color/whiteTextColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outputOldText"
        android:id="@+id/outputOldText"
        android:layout_below="@+id/denominationOldButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textInputNew"
        android:id="@+id/textInputNew"
        android:layout_below="@+id/outputOldText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp"
        android:textSize="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputNew"
        android:layout_below="@+id/textInputNew"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/inputText"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/denominationNewButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/inputNew"
        android:layout_toEndOf="@+id/inputNew"
        android:layout_toRightOf="@+id/inputNew"
        android:background="@color/whiteColorPrimary"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/conButtonText"
        android:textColor="@color/whiteTextColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outputNewText"
        android:id="@+id/outputNewText"
        android:layout_below="@+id/inputNew"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />
</LinearLayout>